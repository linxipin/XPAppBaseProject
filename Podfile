source 'https://github.com/CocoaPods/Specs.git'

platform :ios, '9.0'

target 'XPAppBaseProject' do

  pod 'FDFullscreenPopGesture'
  #布局
  pod 'Masonry', '1.1.0'
  pod 'SDAutoLayout', '2.2.1'

  pod 'AFNetworking', '4.0.1'
  pod 'MJRefresh', '3.2.0'
  pod 'MJExtension', '3.2.1'
  
  pod 'SDWebImage', '5.1.1'
  #提示HUD
  pod 'MBProgressHUD', '1.2.0'
  pod 'SVProgressHUD', '2.2.5'
  
  pod 'IQKeyboardManager', '6.5.5'
  pod 'YYKit', '1.0.9'

  #MVVM 响应式编程
  pod 'ReactiveObjC', '3.1.1'
  
  #瀑布流标签列表
  pod 'JCTagListView', '2.0.0'
  #一个支持多选、选原图和视频的图片选择器，同时有预览功能，支持iOS6+。
  pod 'TZImagePickerController', '2.1.6'  

  #播放视频 网络/本地
  pod 'WMPlayer', '5.0.0'

  #tableView/collection 空展位控件
  pod 'DZNEmptyDataSet', '1.8.1' 

  #一个可自由调整布局的分段控制器
  pod 'JXCategoryView', '1.5.7'
  pod 'ZXSegmentController' #一个可自由调整布局的分段控制器


  #自己TOOL
  pod 'XPTool', '0.3.0'
  
end
